<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--注册账号-->
        <TextView
            android:id="@+id/zhucezhanghaoTextview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="账号："
            android:textColor="@color/black"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/zhucezhanghaoEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:hint="请输入手机号" />
    </LinearLayout>
    <!--注册密码：-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zhucemimaTextview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="密码："
            android:textColor="@color/black"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/zhucemimaEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:hint="6-12位数字或英文字母"
             />
    </LinearLayout>
    <!--确认密码 -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/querenmimaTextview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"

            android:text="确认密码："
            android:textColor="@color/black"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/querenmimaEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:hint="请再次输入密码" />
    </LinearLayout>
    <!--获取验证码-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IdentifyingCodeTextview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="验证码："
            android:textColor="@color/black"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/IdentifyingCodeEdit"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/getIdentifyingCode"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/frame1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:text="获取"
            android:textColor="@color/white" />

    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/SignUpButton1"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/frame1"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="20dp" />



</LinearLayout>